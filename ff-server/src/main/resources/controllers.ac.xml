<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.1.xsd">

  <bean name="ff-index-controller" class="greeting.IndexController" >
    <constructor-arg name="place" value="Rudny Town" />
  </bean>

  <bean name="ff-greeting-controller" class="greeting.GreetingController" />
  <bean name="ff-message-controller" class="hello.MessageController" />
</beans>
